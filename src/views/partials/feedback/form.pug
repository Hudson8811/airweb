include ../../components/input.pug

mixin form(data, className)
	.form(class= className)
		.form__title= data.title
		.form__subtitle= data.subtitle
		form(action='/' method='POST')
			select.form__select
				option(value='choose') Выберите услугу
				option(value='1') 1
				option(value='2') 2
				option(value='3') 3
				option(value='4') 4
			select.form__select
				option(value='choose') Выберите ваш бюджет
				option(value='1') 1
				option(value='2') 2
				option(value='3') 3
				option(value='4') 4
			each input in data.inputs
				+input(input)
			input.form__button(type='submit', value= data.submit)
