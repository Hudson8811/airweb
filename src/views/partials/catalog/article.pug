include ../../components/button.pug
include ../../components/picture.pug

mixin article(data)
	.article(class= 'article--' + data.size)
		if data.img
			.article__picture
				+picture(data.img, 'article__img')
		.article__wrapper
			.article__tags= data.tag
			.article__title= data.title
			if data.desc
				.article__desc!= data.desc
			.article__more
				+button('', 'button--arrow article__button')
				if data.date
					.article__date= data.date
				if data.price
					.article__price!= data.price